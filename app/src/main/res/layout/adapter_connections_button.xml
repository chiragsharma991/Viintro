<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/top_conncount"
    android:layout_marginRight="@dimen/margin_cardview_left_right"
    android:layout_marginLeft="@dimen/margin_cardview_left_right" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="6dp"
        card_view:cardUseCompatPadding="true">

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/btn_connections"
            android:text="0 Connections"
            android:textSize="@dimen/txt_connectionscount"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_txt_connectionscount"
            android:gravity="center"
            android:background="@android:color/white"/>


    </android.support.v7.widget.CardView>
</RelativeLayout>
