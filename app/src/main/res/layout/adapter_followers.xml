<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/img_followers"
        android:layout_margin="10dp"
        android:layout_width="@dimen/wid_ht_img_connections"
        android:layout_height="@dimen/wid_ht_img_connections"
        android:background="@color/black" />

    <TextView
        android:id="@+id/txt_follower_name"
        android:layout_toRightOf="@+id/img_followers"
        android:layout_toLeftOf="@+id/btn_More_Followers"
        android:layout_margin="10dp"
        android:text="vfdgfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdgdfgdfgdfgdfgdfgdfgdfgertertertertertertertertertertertertertrtrtretertr"
        android:textSize="@dimen/connection_txt_name"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_More_Followers"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:text="..."
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/txt_designation"
        android:layout_toRightOf="@+id/img_followers"
        android:layout_below="@+id/txt_follower_name"
        android:layout_marginLeft="10dp"
        android:text="dfgddfgdfgd"
        android:textSize="@dimen/connection_txt_name"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_below="@+id/txt_designation"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height">

        <Button
            android:id="@+id/btn_Connect_Followers"
            android:background="@drawable/btn_border_grey"
            android:text="Connect"
            android:textSize="@dimen/connection_txt_name"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:textAllCaps="false"/>

        <View
            android:layout_width="20dp"
            android:layout_height="@dimen/btn_height"
            />

        <Button
            android:id="@+id/btn_Follow_Followers"
            android:background="@drawable/btn_border_grey"
            android:text="@string/Follow"
            android:textSize="@dimen/connection_txt_name"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:textAllCaps="false" />

    </LinearLayout>

    </RelativeLayout>