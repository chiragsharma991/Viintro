<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_header_pop"
        android:layout_marginLeft="5dp"
        android:text="Why are you reporting this?"
        android:textStyle="bold"
        android:textColor="@color/red_incorrect"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="70dp" />

    <View
        android:background="@color/backgroundSplash2"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>



    <TextView
        android:id="@+id/txt_inappropriate_1"
        android:layout_marginLeft="5dp"
        android:text="This is inappropriate for Viintro"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="70dp" />

    <View
        android:background="@color/backgroundSplash2"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


    <TextView
        android:id="@+id/txt_spam_2"
        android:layout_marginLeft="5dp"
        android:text="Its a spam, a scam, or a fake account"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="70dp" />

    <View
        android:background="@color/backgroundSplash2"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        android:id="@+id/txt_hacked_3"
        android:layout_marginLeft="5dp"
        android:text="This account may have been hacked"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="70dp" />

    <View
        android:background="@color/backgroundSplash2"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        android:id="@+id/txt_something_4"
        android:layout_marginLeft="5dp"
        android:text="Its something else"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="70dp" />


</LinearLayout>