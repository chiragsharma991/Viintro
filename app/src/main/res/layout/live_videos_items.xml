<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="fill">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_video_thumbnail"
                android:clickable="false"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@color/black"
                android:gravity="center_vertical|center_horizontal">
            </ImageView>

            <ImageView
                android:id="@+id/imgPlay"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_play_arrow_24dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/text_videoname"
                android:text="Live videos name 1"
                android:padding="3dp"
                android:layout_above="@+id/lin_views"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:id="@+id/lin_views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_below="@+id/text_videoname"
                android:weightSum="3">
                <TextView
                    android:id="@+id/text_views"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bvdhu fjidji d d"
                    />

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:src="@mipmap/ic_close_white"
                   />
            </LinearLayout>

        </FrameLayout>



    </LinearLayout>

</LinearLayout>