<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_on_boarding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.viintro.Viintro.MyProfile.MyProfileActivity">

    <RelativeLayout
        android:id="@+id/rel_login_main"
        android:background="@color/backgroundSplash2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel_orange_background"
                    android:background="@drawable/bg_orange_top_to_bottom"
                    android:layout_marginTop="@dimen/profile_margin_top"
                    android:layout_marginLeft="@dimen/left_orange_background"
                    android:layout_marginRight="@dimen/right_orange_background"
                    android:layout_marginBottom="@dimen/login_orange_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel_white_background"
                    android:layout_marginLeft="@dimen/left_white_background"
                    android:layout_marginRight="@dimen/right_white_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <android.support.v7.widget.CardView
                        android:id="@+id/profile_data"
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardElevation="6dp"
                        card_view:cardUseCompatPadding="true" >

                        <RelativeLayout
                            android:id="@+id/relative_videoview"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/intro_video_height">

                            <ImageView
                                android:id="@+id/intro_video_thumbnail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </ImageView>

                            <ImageView
                                android:id="@+id/img_edit_introvideo"
                                android:layout_width="@dimen/img_edit_height"
                                android:layout_height="@dimen/img_edit_height"
                                android:src="@mipmap/edit_profile_icon"
                                android:layout_margin="16dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true">
                            </ImageView>

                            <ImageView
                                android:id="@+id/imgPlay"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@mipmap/play_button"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/img_profile"
                            android:src="@mipmap/your_profile_icon"
                            android:layout_marginTop="@dimen/profile_pic_margin_top"
                            android:layout_marginLeft="@dimen/profile_pic_margin_left"
                            android:layout_width="@dimen/profile_pic_height_width"
                            android:layout_height="@dimen/profile_pic_height_width" />

                        <RelativeLayout
                            android:id="@+id/rlEditProfile"
                            android:layout_marginTop="210dp"
                            android:layout_below="@+id/img_profile"
                            android:layout_marginLeft="@dimen/text_profile_margin_left"
                            android:layout_marginRight="@dimen/text_profile_margin_rihgt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/text_ProfileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_profile_name"
                                android:textColor="@color/text_profile_name"
                                android:text="Bhavin Kotecha"
                                />

                            <ImageView
                                android:id="@+id/img_editProfile"
                                android:src="@mipmap/edit_profile_icon"
                                android:layout_width="@dimen/img_edit_height"
                                android:layout_alignParentEnd="true"
                                android:layout_height="@dimen/img_edit_height"
                                android:layout_alignEnd="@+id/text_ProfileName"
                                android:layout_alignRight="@+id/text_ProfileName"
                                android:layout_alignParentRight="true" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/text_profile_designation"
                            android:layout_below="@+id/rlEditProfile"
                            android:text="Founder and Creative Director"
                            android:layout_marginTop="240dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_profile_margin_left"
                            android:textSize="@dimen/text_profile_desgn"
                            android:textColor="@color/text_profile_desgn"/>

                        <TextView
                            android:id="@+id/text_profile_company"
                            android:layout_below="@+id/text_profile_designation"
                            android:layout_marginTop="258dp"
                            android:text="Studio, Little Monters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_profile_margin_left"
                            android:textSize="@dimen/text_profile_desgn"
                            android:textColor="@color/text_profile_desgn"/>

                        <TextView
                            android:id="@+id/text_profile_location"
                            android:layout_below="@+id/text_profile_company"
                            android:layout_marginTop="276dp"
                            android:text="Pune, Maharashtra, India"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_profile_margin_left"
                            android:textSize="@dimen/text_profile_desgn"
                            android:textColor="@color/text_profile_desgn"/>

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="310dp"
                            android:layout_marginLeft="@dimen/text_profile_margin_left"
                            android:layout_marginRight="@dimen/text_profile_margin_rihgt"
                            android:layout_below="@+id/text_profile_location"
                            android:background="@color/view_color"/>

                        <RelativeLayout
                            android:id="@+id/llProfileStrength"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="325dp"
                            android:layout_marginLeft="@dimen/text_profile_margin_left"
                            android:layout_marginRight="@dimen/text_profile_margin_rihgt"
                            android:layout_below="@+id/view">

                            <TextView
                                android:id="@+id/text_strength"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile Strength"
                                android:gravity="center"
                                android:textColor="@color/text_profile_desgn"
                                android:textSize="@dimen/text_profile_desgn"
                                />

                            <TextView
                                android:id="@+id/text_profile_strength"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:gravity="center"
                                android:textSize="@dimen/text_profile_desgn"
                                android:textColor="@color/text_profile_desgn"
                                android:layout_alignParentRight="true"
                                android:text="50%"/>

                        </RelativeLayout>

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_marginTop="345dp"
                            android:paddingRight="@dimen/margin_right"
                            android:layout_below="@+id/llProfileStrength"
                            android:layout_marginLeft="@dimen/text_profile_margin_left"
                            android:layout_marginRight="@dimen/text_profile_margin_rihgt"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:minHeight="30dip"
                            android:maxHeight="30dip"
                            android:thumb="@null"
                            android:progressTint="@color/seekbar_color"
                            android:max="100" />

                        <LinearLayout
                            android:id="@+id/relativeFollow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/seekBar"
                            android:layout_marginTop="365dp"
                            android:layout_marginLeft="@dimen/text_profile_margin_left"
                            android:layout_marginRight="@dimen/text_profile_margin_rihgt"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FOLLOWERS"
                                    android:textSize="@dimen/text_profile_desgn"
                                    android:textColor="@color/text_profile_desgn"
                                    />

                                <TextView
                                    android:id="@+id/txt_followers_count"
                                    android:textSize="@dimen/text_followers"
                                    android:textColor="@color/text_profile_desgn"
                                    android:text="234"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_followings_margin_left"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FOLLOWINGS"
                                    android:textSize="@dimen/text_profile_desgn"
                                    android:textColor="@color/text_profile_desgn"
                                    />

                                <TextView
                                    android:id="@+id/txt_following_count"
                                    android:textSize="@dimen/text_followers"
                                    android:textColor="@color/text_profile_desgn"
                                    android:text="56"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />


                            </LinearLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_upload_videos"
                            android:text="@string/upload_videos"
                            android:layout_below="@+id/relativeFollow"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/btn_login_height"
                            android:layout_marginTop="415dp"
                            android:layout_marginLeft="@dimen/btn_upload_video_margin"
                            android:layout_marginRight="@dimen/btn_upload_video_margin"
                            android:background="@drawable/btn_border_orange"/>

                        <!--<View-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="@dimen/profile_margin_top"-->
                        <!--android:layout_below="@+id/btn_upload_videos"-->
                        <!--/>-->
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_profile_videos"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/space_cardview_margin_myprofile"
                        android:layout_below="@+id/profile_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardElevation="6dp"
                        card_view:cardUseCompatPadding="true" >


                        <RelativeLayout
                            android:id="@+id/rel_white_background_videos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/profile_orange_top"
                            android:layout_marginLeft="@dimen/text_profile_margin_left"

                            >

                            <TextView
                                android:id="@+id/text_profile_video"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile Videos"
                                android:layout_marginRight="@dimen/text_profile_margin_rihgt"
                                android:textSize="@dimen/text_profile_desgn"
                                android:textColor="@color/text_profile_name"
                                />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler_view"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_profile_video" />


                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_profile_whoviewdProfile"
                        android:background="@color/white"
                        android:layout_below="@+id/card_profile_videos"
                        android:layout_marginTop="@dimen/space_cardview_margin_myprofile"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardElevation="6dp"
                        card_view:cardUseCompatPadding="true" >


                        <RelativeLayout
                            android:id="@+id/rel_white_background_views"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <LinearLayout
                                android:id="@+id/lin_profile_views"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/text_profile_margin_left"
                                android:layout_marginRight="@dimen/text_profile_margin_rihgt"
                                >

                                <TextView
                                    android:id="@+id/text_profile_views"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/text_profile_name"
                                    android:textColor="@color/profile_views_color"
                                    />

                                <TextView
                                    android:id="@+id/text_who_viewed_profile"
                                    android:layout_width="175dp"
                                    android:layout_height="wrap_content"
                                    android:text="Viewed your profile"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_toRightOf="@+id/text_profile_views"
                                    android:textSize="@dimen/text_profile_desgn"
                                    android:textColor="@color/text_profile_desgn"
                                    />

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="13dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="45dp"
                                    android:layout_alignParentEnd="true"
                                    android:src="@mipmap/viewed_profile_right_arrow"
                                    android:layout_alignParentRight="true" />


                            </LinearLayout>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_profile_live_videos"
                        android:background="@color/white"
                        android:layout_below="@+id/card_profile_whoviewdProfile"
                        android:layout_marginTop="@dimen/space_cardview_margin_myprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardElevation="6dp"
                        card_view:cardUseCompatPadding="true" >


                        <RelativeLayout
                            android:id="@+id/rel_white_background_live_videos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <LinearLayout
                                android:id="@+id/lin_live_videos"
                                android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/text_profile_margin_left"
                                android:layout_marginRight="@dimen/text_profile_margin_rihgt"
                                >

                                <TextView
                                    android:id="@+id/text_live_videos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24"
                                    android:textSize="@dimen/text_profile_name"
                                    android:textColor="@color/profile_views_color"
                                    />

                                <TextView
                                    android:id="@+id/text_live_videos_profile"
                                    android:layout_width="175dp"
                                    android:layout_height="wrap_content"
                                    android:text="Live Videos"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/text_live_videos"
                                    android:textSize="@dimen/text_profile_desgn"
                                    android:textColor="@color/text_profile_desgn"
                                    />

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="13dp"
                                    android:layout_marginLeft="45dp"
                                    android:layout_alignParentEnd="true"
                                    android:src="@mipmap/viewed_profile_right_arrow"
                                    android:layout_alignParentRight="true" />


                            </LinearLayout>



                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>


            </RelativeLayout>


        </ScrollView>
    </RelativeLayout>
</RelativeLayout>