<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_connections"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/rel_share_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_share_messages"
            android:background="@color/black"
            android:layout_margin="10dp"
            android:layout_width="@dimen/wid_ht_img_connections"
            android:layout_height="@dimen/wid_ht_img_connections" />


        <TextView
            android:id="@+id/txt_name"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="60dp"
            android:text=""
            android:textSize="@dimen/connection_txt_name"
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/chk_msgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/chk_msgs"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
        />

        <TextView
            android:id="@+id/txt_designation"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="60dp"
            android:text=""
            android:ellipsize="end"
            android:textSize="@dimen/connection_txt_name"
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/chk_msgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<TextView-->
            <!--android:id="@+id/txt_location"-->
            <!--android:layout_below="@+id/txt_designation"-->
            <!--android:layout_marginLeft="60dp"-->
            <!--android:text="Pune, Maharashtra, India"-->
            <!--android:ellipsize="end"-->
            <!--android:textSize="@dimen/connection_txt_name"-->
            <!--android:textColor="@color/black"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

    </RelativeLayout>

    <View
        android:background="@color/backgroundSplash2"
        android:layout_below="@+id/rel_connections"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

</RelativeLayout>